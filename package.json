{
  "name": "meridian-ux",
  "version": "1.0.0-alpha",
  "description": "Enterprise web components based on Ant Design principles. Framework-agnostic, accessible, and built with Lit.",
  "repository": "https://github.com/valostra-digital/meridian-ux.git",
  "license": "MIT",
  "private": true,
  "keywords": [
    "web-components",
    "lit",
    "ant-design",
    "design-system",
    "ui-components"
  ],
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">= 24.12.0"
  },
  "scripts": {
    "dev": "yarn workspace @meridian-ux/components dev",
    "build": "yarn workspace @meridian-ux/components build",
    "build:docs": "yarn workspace @meridian-ux/components build:docs",
    "docs:serve": "python3 -m http.server 8000"
  },
  "dependencies": {},
  "devDependencies": {}
}